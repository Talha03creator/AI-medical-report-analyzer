# ============================================================
# Environment Configuration - AI Medical Report Analyzer
# Copy this file to .env and fill in your values
# ============================================================

# Application
APP_NAME="AI Medical Report Analyzer"
APP_VERSION="1.0.0"
APP_ENV="development"
DEBUG=false
SECRET_KEY="your-super-secret-key-change-in-production-min-32-chars"

# Server
HOST="0.0.0.0"
PORT=8000

# Database (PostgreSQL)
DATABASE_URL="postgresql+asyncpg://postgres:password@localhost:5432/medical_analyzer"
DATABASE_SYNC_URL="postgresql://postgres:password@localhost:5432/medical_analyzer"

# AI API Configuration
# Set your LLM provider API key here
MEDICAL_AI_API_KEY="your-openai-or-compatible-api-key-here"
AI_MODEL="gpt-4o-mini"
AI_TEMPERATURE=0.2
AI_MAX_TOKENS=4096
AI_BASE_URL=""  # Leave empty for OpenAI, or set custom endpoint

# Redis Cache (Optional - set REDIS_ENABLED=false to disable)
REDIS_ENABLED=false
REDIS_URL="redis://localhost:6379/0"
CACHE_TTL_SECONDS=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=5
RATE_LIMIT_WINDOW=60

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS="txt,pdf"

# CORS
CORS_ORIGINS="http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000"

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"
